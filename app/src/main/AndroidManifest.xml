<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.subhaaspa.dysxa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dysxa_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dysxa_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FollowAlphabet"
            android:label="@string/title_activity_follow_alphabet"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".information" />
        <activity android:name=".Colours" />
        <activity android:name=".WordJungle" />
        <activity android:name=".Dictation" />
        <activity android:name=".ImageQuiz" />
        <activity android:name=".QuizzingScreen" />
        <activity android:name=".LearnScreen" />
        <activity android:name=".ColorKB" />
        <activity android:name=".AlphabetAnimation" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>